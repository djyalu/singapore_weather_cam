{
  "name": "singapore-weather-cam",
  "version": "1.0.0",
  "description": "Real-time weather and webcam monitoring for Singapore",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "collect-weather": "node scripts/collect-weather.js",
    "capture-webcam": "node scripts/capture-webcam.js",
    "health-check": "node scripts/health-check.js",
    "health-monitor": "node scripts/health-check.js --monitor --interval=60",
    "health-json": "node scripts/health-check.js --json",
    "lint": "eslint src/**/*.{js,jsx}",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/**/*.test.{js,jsx}",
    "test:integration": "vitest run tests/integration/**/*.test.{js,jsx}",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "test:e2e-headed": "playwright test --headed",
    "test:accessibility": "vitest run tests/accessibility/**/*.test.{js,jsx}",
    "test:performance": "vitest run tests/performance/**/*.test.{js,jsx}",
    "test:security": "vitest run tests/security/**/*.test.{js,jsx}",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "test:rpa": "node scripts/rpa-website-test.js",
    "test:rpa-visual": "HEADLESS=false node scripts/rpa-website-test.js",
    "test:quick": "TARGET_URL=https://djyalu.github.io/singapore_weather_cam/ TEST_TYPE=smoke node scripts/rpa-website-test.js",
    "test:actions": "npm run test:quick",
    "quality:check": "npm run lint && npm run test:coverage && npm run test:e2e",
    "quality:report": "node scripts/quality-report.js",
    "task:status": "node scripts/task-manager.js --action=status",
    "task:analytics": "node scripts/task-manager.js --action=analytics",
    "task:demo": "node scripts/task-manager.js --demo",
    "task:init": "node scripts/task-manager.js --initialize"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.0",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.525.0",
    "node-fetch": "^3.3.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "axe-core": "^4.10.3",
    "data-uri-to-buffer": "^6.0.2",
    "eslint": "^8.45.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^6.4.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^15.0.0",
    "jsdom": "^24.0.0",
    "lighthouse": "^12.0.0",
    "playwright": "^1.54.1",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.3",
    "terser": "^5.43.1",
    "vite": "^4.4.0",
    "vitest": "^1.6.0",
    "vitest-dom": "^0.1.1"
  }
}
